<Window x:Class="TimeTracker.DateRangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Date Range" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Calendar Name="calendar" Grid.Row="0" SelectionMode="{Binding SelectionMode}" SelectedDatesChanged="calendar_SelectedDatesChanged"/>
        <Button Grid.Row="1" Content="Ok" IsDefault="True" Click="Button_Click"/>
    </Grid>
</Window>
